
 @using PlantDiseaseX.Core
@using PlantDiseaseX.Core.Entities
@model IReadOnlyList<Plantcategory>


@{
    ViewData["Title"] = "Categories";
}
<div class="logo" style="position: relative;">
    <a href="javascript:void(0)" class="simple-text logo-mini" style="position: absolute; top: -10px; left: 0;">
        <img src="~/images/logo/logo1.png" alt="Logo" style="max-height: 50px;">
    </a>

    <h1 style="margin-left: 70px;">
      
        Data of Categories
    </h1>
</div>




<!-- Button trigger modal -->
<button type="button" class="btn btn-success animation-on-hover" data-toggle="modal" data-target="#exampleModal">
   Add Category
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">
            <partial name="Create" model="new Plantcategory()" />
            <div class="modal-header">
              
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="tim-icons icon-simple-remove"></i>
                </button>
            </div>

          
               
            
           
        </div>
    </div>
</div>







@* <partial name="Create" model="new Plantcategory()" />
 *@

@if (Model.Count() > 0)
{
    <div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center" >#</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                        <td class="text-center">@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                                <a class="btn btn-danger btn-sm btn-icon animation-on-hover" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is No Categories!</h2>
    </div>
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

