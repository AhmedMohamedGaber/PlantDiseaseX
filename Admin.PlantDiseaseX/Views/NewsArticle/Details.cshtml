

 @model NewsArticleViewModel
 @using PlantDiseaseX.Core
@using PlantDiseaseX.Core.Entities
@inject IUnitOfWork unitOfWork
@{
    ViewData["Title"] = "Details";
}


<div class="alert alert-info btn-success  animation-on-hover" role="alert" style="background-color:#89CFF0	; font-size:larger">
    @Model.Title's NewsArticle Details
</div>
<div class=" card" style="background-color: rgba(0, 240, 196, 0.1)">
    <div class="form-row">

        <div class="form-group  p-3 col-md-5">
            <div class="card form-row " style="background-color: rgba(0, 240, 196, 0.1)">
                <img class="card-img-top " src="~/@Model.NewsPicture" alt="Plant Image">
            <div class="card-body">
                <h3 class="card-title">@Model.Title</h3>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Date</p>
            </div>
        </div>
    </div>
   

    </div>


    <div class="form-group p-3 col-md-7">
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>

</div>


