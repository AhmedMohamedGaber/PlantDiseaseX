@using PlantDiseaseX.Core
@using PlantDiseaseX.Core.Entities
@model NewsArticleViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-warning btn-danger  alert-dismissible fade show animation-on-hover" role="alert" style="background-color:#FF1A1A ; font-size:large">
    <strong>Attention!</strong>  Are You Sure You Want To Delete @Model.Title's NewArticle...!?
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <i class="tim-icons icon-simple-remove"></i>
    </button> 
</div>

<div class="container card" style="background-color: rgba(0, 240, 196, 0.1)">
	<form method="post" asp-action="Delete" >
		<input asp-for="Id"  hidden />

      
        <img src="~/@Model.NewsPicture" alt="Plant Image">
        <div class="form-group">
            <label asp-for="Title" class="col-form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Description" class="col-form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="col-form-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
       
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-light">Back To List</a>
	</form>
</div>