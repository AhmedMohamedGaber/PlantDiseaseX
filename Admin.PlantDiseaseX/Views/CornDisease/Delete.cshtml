@using PlantDiseaseX.Core
@using PlantDiseaseX.Core.Entities
@model CornDiseasecsViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-warning btn-danger  alert-dismissible fade show animation-on-hover" role="alert" style="background-color:#FF1A1A ; font-size:large">
    <strong>Attention!</strong>  Are You Sure You Want To Delete @Model.name's CornDisease...!?
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <i class="tim-icons icon-simple-remove"></i>
    </button>
</div>

<div class="container card" style="background-color: rgba(0, 240, 196, 0.1)">
	<form method="post" asp-action="Delete" >
