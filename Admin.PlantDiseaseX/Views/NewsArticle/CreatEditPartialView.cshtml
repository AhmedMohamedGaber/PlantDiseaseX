@using PlantDiseaseX.Core
@using PlantDiseaseX.Core.Entities
@model NewsArticleViewModel
@inject IUnitOfWork unitOfWork


<div class="form-group  col-md-6">
    <label asp-for="Title" class="col-form-label"></label>
    <input  asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>


<div class="form-group  col-md-8">
    <label asp-for="Description" class="col-form-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group col-md-6">
    <label asp-for="Date" class="col-form-label">Date and Time</label>
    <input asp-for="Date" class="form-control" type="datetime-local" />
    <span asp-validation-for="Date" class="text-danger"></span>
</div>

