        .logo {
            position: relative;
            margin-bottom: 20px;
        }

            .logo a {
                position: absolute;
                top: -10px;
                left: 0;
            }

            .logo img {
                max-height: 50px;
            }

            .logo h1 {
                margin-left: 70px;
            }

        .btn {
            margin-bottom: 20px;
        }

        .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            width: 20rem;
            height: 28rem;
            border-radius: 10px;
            overflow: hidden;
            cursor: pointer;
            position: relative;
            color: var(--primary-white);
            box-shadow: 0 10px 30px 5px rgba(0, 0, 0, 0.2);
            background-color: rgba(0, 240, 196, 0.2);
        }

            .card img {
                position: absolute;
                object-fit: cover;
                width: 100%;
                height: 70%;
                top: 0;
                left: 0;
                opacity: 0.9;
                transition: opacity .2s ease-out;
            }

            .card h2 {
                position: absolute;
                inset: auto auto 30px 30px;
                margin: 0;
                transition: inset .3s .3s ease-out;
                font-family: 'Roboto Condensed', sans-serif;
                font-weight: normal;
                text-transform: uppercase;
            }

            .card p, .card a {
                position: absolute;
                opacity: 0;
                max-width: 80%;
                transition: opacity .3s ease-out;
            }

            .card p {
                inset: auto auto 80px 30px;
            }

            .card a.button {
                inset: auto auto 40px 30px;
                color: inherit;
                text-decoration: none;
            }

            .card:hover h2 {
                inset: auto auto 220px 30px;
                transition: inset .3s ease-out;
            }

            .card:hover p, .card:hover a {
                opacity: 1;
                transition: opacity .5s .1s ease-in;
            }

            .card:hover img {
                transition: opacity .3s ease-in;
                opacity: 1;
            }

        .material-symbols-outlined {
            vertical-align: middle;
        }

        .form-control {
            border-color: #00f0c4;
        }

        .btn-group .btn-icon {
            margin-left: 5px;
        }

        .alert {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .action-buttons {
            position: absolute;
            bottom: 10px;
            right: 10px;
            display: flex;
            gap: 10px;
            opacity: 0;
            transition: opacity .3s ease-out;
        }

        .card:hover .action-buttons {
            opacity: 1;
            transition: opacity .5s .1s ease-in;
        }

        .card-id {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <main>
        <div class="logo">
            <a href="javascript:void(0)" class="simple-text logo-mini">
                <img src="~/images/logo/logo1.png" alt="Logo">
            </a>
            <h1>Data of Plants</h1>
        </div>

        <a asp-action="Create" class="btn btn-default animation-on-hover">
            <i class="tim-icons icon-simple-add"></i> Add New Plant
        </a>

        <div class="search-container">
            <form asp-action="Index" class="row col-8 offset-1">
                <div class="col-8 p-1">
                    <input type="text" class="form-control" name="SearchValue" placeholder="Search by name..." />
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-success animation-on-hover">
                        <i class="tim-icons icon-zoom-split"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="mt-4">
            <h3>Total Plants: @Model.Count</h3>
        </div>

        @if (Model.Any())
        {
            <div class="card-container">
                @foreach (var plant in Model)
                {
                    <div class="card">
                        <div class="card-id">@plant.Id</div>

                        <img src="~/@(plant.PictureUrl ?? "DefaultImage.png")" alt="Plant Image">
                        <div class="card-content">
                            <h2>@plant.Name</h2>
                            <p>@plant.Description</p>
                            <a href="@Url.Action("Details", new { id = plant.Id })" class="button" style="color:white">
                                Find out more
                                <span class="material-symbols-outlined">
                                    arrow_right_alt
                                </span>
                            </a>
                            <div class="action-buttons">
                                <a class="btn btn-info btn-sm btn-icon animation-on-hover" asp-action="Edit" asp-route-id="@plant.Id"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger btn-sm btn-icon animation-on-hover js-delete" asp-action="Delete" asp-route-id="@plant.Id"><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning btn-danger alert-dismissible fade show animation-on-hover" role="alert" style="background-color:#FF1A1A; font-size:large">
                <h2>There are no Plants.....!</h2>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="tim-icons icon-simple-remove"></i>
                </button>
            </div>
        }
    </main>

    @section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
        <script>
            $(document).ready(function () {
                $('.js-delete').on('click', function () {
                    var btn = $(this);
                    var plantId = btn.data('id');
                    // Implement your delete logic here
                });
            });
        </script>
    }
</body>
</html>








